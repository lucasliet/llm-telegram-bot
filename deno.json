{
	"tasks": {
		"test": "./run_tests.sh",
		"dev": "./devrun.sh"
	},
	"fmt": {
		"useTabs": true,
		"semiColons": true,
		"singleQuote": true,
		"lineWidth": 160
	},
	"imports": {
		"@std/encoding": "jsr:@std/encoding@^1.0.10",
		"asserts": "https://deno.land/std@0.210.0/assert/mod.ts",
		"mock": "https://deno.land/std@0.210.0/testing/mock.ts",
		"grammy": "https://deno.land/x/grammy@v1.17.2/mod.ts",
		"grammy-auto-chat-action": "https://deno.land/x/grammy_auto_chat_action/mod.ts",
		"grammy-context": "https://deno.land/x/grammy@v1.17.2/context.ts",
		"grammy-types": "https://deno.land/x/grammy@v1.17.2/types.deno.ts",
		"oak": "https://deno.land/x/oak@v12.6.1/mod.ts",
		"oak-cors": "https://deno.land/x/cors@v1.2.2/mod.ts",
		"textcompress": "jsr:@lucasliet/textcompress",
		"npm:openai": "npm:openai@5.16.0",
		"base64": "jsr:@std/encoding/base64",
		"@/": "./src/"
	},
	"lint": {
		"rules": {
			"exclude": [
				"no-explicit-any"
			]
		}
	},
	"compilerOptions": {
		"strict": true
	}
}